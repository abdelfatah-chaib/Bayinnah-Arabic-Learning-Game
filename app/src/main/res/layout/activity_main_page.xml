<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPageActivity"
    android:background="@color/white"
    >


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/nougat"
        app:layout_constraintVertical_bias="0.0"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="PAGE D'ACCEUIL"
            android:textSize="20dp"
            android:layout_marginLeft="130dp"
            android:textStyle="italic"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"/>
    </com.google.android.material.appbar.AppBarLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wave__6_">


    <pl.droidsonroids.gif.GifImageView
        android:layout_width="162dp"
        android:layout_height="125dp"
        android:layout_below="@id/learn_btn"
        android:src="@drawable/read"
        android:translationX="110dp"
        android:translationY="-225dp" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/learn_btn"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="188dp"
        android:background="#fafafa"
        android:text="Apprendre"
        android:textColor="@color/beige"
        android:textSize="20sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/play_btn"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/learn_btn"
        android:layout_marginTop="130dp"
        android:backgroundTint="#fafafa"
        android:text="Jouer"
        android:textColor="@color/beige"
        android:textSize="20sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/playaudio_btn"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/learn_btn"
        android:layout_marginTop="315dp"
        android:backgroundTint="#fafafa"
        android:text="Pratiquer prononciation"
        android:textColor="@color/beige"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/homeimg2"
        android:layout_width="match_parent"
        android:layout_height="158dp"
        android:layout_below="@id/learn_btn"
        android:layout_marginStart="2dp"
        android:layout_marginTop="-10dp"
        android:translationX="-90dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="2dp"
        android:scaleX="1.111"
        android:scaleY="1.2"
        android:src="@drawable/letslearn_preview_rev_1" />

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="182dp"
        android:layout_height="165dp"
        android:layout_below="@id/learn_btn"
        android:layout_marginStart="2dp"
        android:layout_marginTop="-13dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="2dp"
        android:src="@drawable/play"
        android:translationX="230dp"
        android:translationY="5dp" />

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="162dp"
        android:layout_height="125dp"
        android:layout_below="@id/play_btn"
        android:layout_marginStart="2dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:src="@drawable/micro"
        android:translationX="130dp"
        android:translationY="5dp" />
</RelativeLayout>


</RelativeLayout>

