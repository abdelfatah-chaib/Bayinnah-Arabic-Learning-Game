<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/wave__5_">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           />


        <TextView
            android:id="@+id/score_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-black"
            android:text="10"
            android:textColor="#870979"
            android:textSize="80dp"
            android:translationX="-50dp"
            android:translationY="190dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="/10"
            android:textColor="@color/beige"
            android:textSize="60dp"

            android:translationX="196dp"
            android:translationY="220dp" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/imageView3"
            android:layout_width="416dp"
            android:layout_height="339dp"
            android:translationX="0dp"
            android:translationY="300dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/repeat"
            android:drawablePadding="8dp"
            android:gravity="center_vertical|center_horizontal"
            android:translationX="250dp"
            android:translationY="660dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/home"
            android:drawablePadding="8dp"
            android:gravity="center_vertical|center_horizontal"
            android:translationX="75dp"
            android:translationY="660dp" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="votre score"
            android:textSize="40dp"
            android:textColor="#870979"
            android:translationX="90dp"
            android:translationY="120dp" />

        <ImageView
            android:id="@+id/score_view"
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:translationY="10dp"
             />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.constraintlayout.widget.ConstraintLayout>