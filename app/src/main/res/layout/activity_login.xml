<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/wave__6_">

        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/loginimg"
            android:layout_height="138dp"
            android:src="@drawable/loginbg_preview_rev_1"
            android:layout_below="@+id/login"/>

        <TextView
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="50dp"
            android:gravity="center"
            android:text="S'authentifier"
            android:textColor="#464b44"
            android:textSize="35dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/username1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginimg"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="#6b6f69"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawablePadding="20dp"
            android:hint="Username"
            android:padding="20dp"
            android:textColor="@color/yelloish"
            android:textColorHint="@color/yelloish" />

        <EditText
            android:id="@+id/password1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/username1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/nougat"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:drawablePadding="20dp"
            android:hint="Mot de passe"
            android:inputType="textPassword"
            android:padding="20dp"
            android:textColor="@color/yelloish"
            android:textColorHint="@color/yelloish" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_login"
            android:layout_width="128dp"
            android:layout_height="61dp"
            android:layout_below="@id/password1"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#fafafa"
            android:text="Log in"
            android:textColor="@color/yelloish"
            android:textSize="20dp" />

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="126dp"
            android:src="@drawable/stagpic"
            android:layout_below="@id/btn_create_acc"
            />

        <Button
            android:id="@+id/btn_create_acc"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="Ou creer un compte..."
            android:textSize="15dp"
            android:textColor="@color/nougatdark"
            android:backgroundTint="@color/nougat"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/btn_login"
            android:layout_centerHorizontal="true" />
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/forgot"
            android:text="mot de passe oublie"
            android:textSize="20dp"
            android:layout_below="@id/btn_create_acc"
            android:layout_marginLeft="108dp"
            android:textColor="@color/nougatdark"></TextView>



    </RelativeLayout>


    

</RelativeLayout>